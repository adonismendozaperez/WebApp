@model List<Modelo.Alumno>
@{ 
    ViewBag.title = "Alumnos";
}
<h2 class="page-header">
    <a href="~/home/crud" class="btn btn-default pull-right">Nuevo Alumno</a> 
    Alumnos
</h2>
<table class="table table-bordered table-hover table-responsive">
    <thead>
        <tr> 
            <th style="width:200px;">Nombre</th>
            <th style="width:200px;">Sexo</th>
            <th style="width:200px;">Fecha Nacimiento</th>
            <th style="width:200px;"></th>
        </tr>
    </thead>
    <tbody>
     
           @foreach (var m in Model)
           {
            <tr>
                <th>@(m.Nombre+" "+m.Apellidos)</th>
                <th>@(m.Sexo =="1"?"Hombre":"Mujer")</th>
                <th>@m.FechaNacimiento</th>
                <th style="width:100px;">
                    <a class="btn btn-xs btn-default " href="~/home/ver/@m.id">Ver</a>
                    <a class="btn btn-xs btn-primary " href="~/home/crud/@m.id">Editar</a>
                    <a onclick="return confirm('¿Desea eliminar?');" class="btn btn-xs btn-danger" href="~/home/eliminar/@m.id">Eliminar</a>
                </th>
                
            </tr>
           }
    </tbody>

</table>
