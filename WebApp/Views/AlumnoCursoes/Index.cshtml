@model IEnumerable<Modelo.AlumnoCurso>

@{
    ViewBag.Title = "Asignaciones";
}

<h2>Asignaciones</h2>

<p>
    @Html.ActionLink("Nueva Asignacion", "Create", new { }, new { @class = "btn btn-default pull-right" })
</p>
<table class="table table-bordered table-hover table-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Alumno.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Curso.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nota)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Alumno.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Curso.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nota)
        </td>
        <td>
            @Html.ActionLink("Ver", "Details", new { id = item.id }, new { @class = "btn btn-xs btn-default" })
            @Html.ActionLink("Editar", "Edit", new { id=item.id }, new {@class= "btn btn-xs btn-primary" })
            @*@Html.ActionLink("Eliminar", "Delete", new { id=item.id }, new { @class = "btn btn-xs btn-danger" })*@
            <a onclick="return confirm('¿Desea eliminar?');" class="btn btn-xs btn-danger" href="~/AlumnoCursoes/Delete/@item.id">Eliminar</a>

        </td>
    </tr>
}

</table>
